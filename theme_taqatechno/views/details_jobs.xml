<odoo>
    <template id="details_jobs_ids" inherit_id="website_hr_recruitment.detail">
        <xpath expr="//t[@t-call='website.layout']" position="replace">
            <t t-call="website.layout">
                <section
                        style="max-width: 882px"
                        class="m-auto"
                        id="hero_section_details_ids"
                >
                    <div class="container py-lg-5 my-5">
                        <div class="row">
                            <div class="nav-links pb-3 pb-lg-0 d-flex gap-2">
                                <a href="/careers" style="font-weight: 500" class="text-black"
                                >Career
                                </a>
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="24"
                                     height="24"
                                     viewBox="0 0 24 24"
                                     fill="none">
                                    <path d="M8.25 4.5L15.75 12L8.25 19.5"
                                          stroke="#0F172A"
                                          stroke-width="1.5"
                                          stroke-linecap="round"
                                          stroke-linejoin="round"/>
                                </svg>
                                <a href="#jobdescription" class="text-black">Job description</a>
                            </div>

                            <div class="details py-lg-5 mt-3">
                                <p class="fs-5 fw-bold" t-esc="job.name"/>
                                <div class="details-jobs d-flex gap-3">
                                    <p t-esc=" job.contract_type_id.name"/>
                                    <meta
                                            t-if="job.contract_type_id"
                                            itemprop="employmentType"
                                            t-att-content="job.contract_type_id.name"
                                    />
                                    <p>|</p>
                                    <p style="font-weight: 500; font-size: 18px">
                                        <t t-esc="job.experience"/>
                                        + years
                                    </p>
                                </div>
                                <div
                                        class="date pt-lg-4 d-flex flex-column flex-lg-row justify-content-between align-items-lg-center"
                                >
                                    <t t-if="job.date_jobs">
                                        <time
                                                style="color: #150e25"
                                                class="mt-3 mt-lg-0"
                                                t-esc="job.date_jobs.strftime('%b %d, %Y')"
                                        />
                                    </t>
                                    <t t-else="">
                                        <p style="color: #150e25">undefined</p>
                                    </t>
                                    <a
                                            t-attf-href="/jobs/apply/#{slug(job)}"
                                            style="background: #7f2e8c"
                                            class="btn w-fit mt-4 mt-lg-0 text-white fw-bold"
                                    >Apply now
                                        <span class="d-inline-block"
                                        >
                                            <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="24"
                                                    height="24"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                            >
                                                <path
                                                        d="M4.5 12L19.5 12M19.5 12L12.75 5.25M19.5 12L12.75 18.75"
                                                        stroke="#F9F5F9"
                                                        stroke-width="1.5"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                />
                                            </svg>
                                        </span>
                                    </a>
                                </div>
                            </div>

                            <div class="pt-5 pt-lg-0" id="jobdescription">
                                <h3 class="fs-4 py-4">Job description</h3>
                                <h5 class="pb-4">About the job</h5>
                                <div t-field="job.website_description"/>
                            </div>

                            <div class="social py-lg-3">
                                <div
                                        t-attf-class="mb-4     mt-md-0 order-2 order-md-1 pb-lg-4 mb-lg-0 d-flex align-items-center #{_div_class} s_social_media o_not_editable oe_unmovable oe_unremovable gap-2"
                                >
                                    <a
                                            style="color: #150e25 !important"
                                            t-if="website.company_id.social_facebook"
                                            t-att-href="website.company_id.social_facebook"
                                            t-attf-class="mx-2 fs-5   cursor-pointer btn p-0 text-white {{
                      _link_class
                    }}"
                                            target="_blank"
                                    >
                                        <span class="fa-5 fa fa-facebook-square"/>
                                    </a>
                                    <a
                                            style="color: #150e25 !important"
                                            t-if="website.company_id.social_twitter"
                                            t-att-href="website.company_id.social_twitter"
                                            t-attf-class="mx-2 fs-5 btn p-0 text-white {{
                      _link_class
                    }}"
                                            target="_blank"
                                    >
                                        <span class="fa-5 fa fa-twitter"/>
                                    </a>
                                    <a
                                            style="color: #150e25 !important"
                                            t-if="website.company_id.social_linkedin"
                                            t-att-href="website.company_id.social_linkedin"
                                            t-attf-class="mx-2   btn p-0 text-white {{ _link_class }}"
                                            target="_blank"
                                    >
                                        <span class="fa-5 fa fa-linkedin"/>
                                    </a>
                                    <a
                                            style="color: #150e25 !important"
                                            t-if="website.company_id.social_youtube"
                                            t-att-href="website.company_id.social_youtube"
                                            t-attf-class="mx-2   btn p-0 text-white {{ _link_class }}"
                                            target="_blank"
                                    >
                                        <span class="fs-5 fa fa-youtube-play"/>
                                    </a>
                                    <a
                                            style="color: #150e25 !important"
                                            t-if="website.company_id.social_github"
                                            t-att-href="website.company_id.social_github"
                                            t-attf-class="mx-2   btn p-0 text-white {{ _link_class }}"
                                            target="_blank"
                                    >
                                        <span class="fs-5 fa fa-github"/>
                                    </a>
                                    <a
                                            style="color: #150e25 !important"
                                            t-if="website.company_id.social_instagram"
                                            t-att-href="website.company_id.social_instagram"
                                            t-attf-class="mx-2   btn p-0 text-white {{ _link_class }}"
                                            target="_blank"
                                    >
                                        <span class="fs-5 fa fa-instagram"/>
                                    </a>
                                    <a
                                            style="color: #150e25 !important"
                                            t-if="website.company_id.social_tiktok"
                                            t-att-href="website.company_id.social_tiktok"
                                            t-attf-class="mx-2 fs-4  btn p-0 text-white {{
                      _link_class
                    }}"
                                            target="_blank"
                                    >
                                        <span class="fs-5 fa fa-tiktok"/>
                                    </a>
                                </div>
                            </div>

                            <a
                                    t-attf-href="/jobs/apply/#{slug(job)}"
                                    style="background: #7f2e8c"
                                    class="btn w-fit mt-lg-0 text-white fw-bold"
                            >Apply now
                                <span class="d-inline-block"
                                >
                                    <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                    >
                                        <path
                                                d="M4.5 12L19.5 12M19.5 12L12.75 5.25M19.5 12L12.75 18.75"
                                                stroke="#F9F5F9"
                                                stroke-width="1.5"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                        />
                                    </svg>
                                </span>
                            </a>
                        </div>
                    </div>
                </section>
            </t>
        </xpath>
    </template>
</odoo>
