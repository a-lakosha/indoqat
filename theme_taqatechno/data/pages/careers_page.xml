<odoo>
    <data>
        <template name="careers" id="careers_page_template">
            <t t-set="additional_title" t-valuef="Careers"/>
            <t t-call="website.layout">
                <div role="main" id="wrap" class="oe_structure oe_empty careers">
                    <div class="oe_structure oe_empty"/>
                    <!-- Hero / intro -->
                    <section class="careers-page py-5">
                        <div class="container py-4 mt-lg-4">
                            <div class="content text-center">
                                <h1 class="text-primary fs-6 fw-normal">Careers</h1>
                                <h3 class="title-hero-section pt-1 m-auto mb-3"
                                    style="max-width: 656px;">
                                    Lead the Future with TaqaTechno
                                </h3>
                                <p class="fs-6 pb-4">
                                    Unleash your potentialâ€¦ transform the technology world.
                                </p>
                                <div class="row py-lg-5">
                                    <!-- Growth Opportunities -->
                                    <div class="col-lg-3 mt-3">
                                        <div class="box h-100">
                                            <div
                                                    class="content text-start p-4 rounded-5"
                                                    style="background: #fef2f2;"
                                            >
                                                <div style="margin-bottom: 12px;" class="mb-lg-5">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40"
                                                         viewBox="0 0 40 40" fill="none">
                                                        <path
                                                                d="M5 21.875C5 20.8395 5.83947 20 6.875 20H10.625C11.6605 20 12.5 20.8395 12.5 21.875V33.125C12.5 34.1605 11.6605 35 10.625 35H6.875C5.83947 35 5 34.1605 5 33.125V21.875Z"
                                                                stroke="#150E25"
                                                                stroke-width="2.5"
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                        />
                                                        <path
                                                                d="M16.25 14.375C16.25 13.3395 17.0895 12.5 18.125 12.5H21.875C22.9105 12.5 23.75 13.3395 23.75 14.375V33.125C23.75 34.1605 22.9105 35 21.875 35H18.125C17.0895 35 16.25 34.1605 16.25 33.125V14.375Z"
                                                                stroke="#150E25"
                                                                stroke-width="2.5"
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                        />
                                                        <path
                                                                d="M27.5 6.875C27.5 5.83947 28.3395 5 29.375 5H33.125C34.1605 5 35 5.83947 35 6.875V33.125C35 34.1605 34.1605 35 33.125 35H29.375C28.3395 35 27.5 34.1605 27.5 33.125V6.875Z"
                                                                stroke="#150E25"
                                                                stroke-width="2.5"
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                        />
                                                    </svg>
                                                </div>
                                                <p class="fs-6 pt-lg-5 fw-bold mb-1">Growth Opportunities</p>
                                                <p class="mb-0">Continuous learning and career advancement paths</p>
                                            </div>
                                            <div class="mt-3">
                                                <div
                                                        class="rounded-5"
                                                        style="
                                                    background-image: url('/theme_taqatechno/static/src/images/carers/team.webp');
                                                    height: 269px;
                                                    background-position: center;
                                                    background-size: cover;
                                                "
                                                        aria-label="Team image"
                                                ></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Welcome image -->
                                    <div class="col-lg-3 mt-3">
                                        <div class="box h-100">
                                            <img
                                                    loading="lazy"
                                                    class="rounded-5 h-100"
                                                    src="/theme_taqatechno/static/src/images/carers/welome.webp"
                                                    alt="Welcome"
                                                    style="object-fit: cover;"
                                            />
                                        </div>
                                    </div>

                                    <!-- Innovation -->
                                    <div class="col-lg-3 mt-3">
                                        <div class="h-100 box">
                                            <div
                                                    class="rounded-5 pb-2"
                                                    style="
                                                background-image: url('/theme_taqatechno/static/src/images/carers/metaing.webp');
                                                height: 269px;
                                                background-size: cover;
                                                background-position: center;
                                            "
                                                    aria-label="Innovation background"
                                            ></div>
                                            <div
                                                    class="text-start mt-3 p-4 rounded-5"
                                                    style="background: #fef2f2;"
                                            >
                                                <div style="margin-bottom: 12px;" class="mb-lg-5">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40"
                                                         viewBox="0 0 40 40" fill="none">
                                                        <path
                                                                d="M6.25 5V23.75C6.25 25.8211 7.92893 27.5 10 27.5H13.75M6.25 5H3.75M6.25 5H33.75M33.75 5H36.25M33.75 5V23.75C33.75 25.8211 32.0711 27.5 30 27.5H26.25M13.75 27.5H26.25M13.75 27.5L12.0833 32.5M26.25 27.5L27.9167 32.5M27.9167 32.5L28.75 35M27.9167 32.5H12.0833M12.0833 32.5L11.25 35M12.5 20L17.5 15L21.0793 18.5793C22.757 16.1717 24.9506 14.1504 27.5 12.6756"
                                                                stroke="#150E25"
                                                                stroke-width="2.5"
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                        />
                                                    </svg>
                                                </div>
                                                <p class="fs-6 fw-bold pt-lg-5 mb-1">Improve your Innovation</p>
                                                <p class="mb-0">
                                                    Work with cutting-edge technologies and methodologies.
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Culture -->
                                    <div class="col-lg-3 mt-3">
                                        <div class="box h-100">
                                            <div
                                                    class="text-start p-4 rounded-5"
                                                    style="background: #ecf9f9;"
                                            >
                                                <div style="margin-bottom: 12px;" class="mb-lg-5">
                                                    <svg width="36" height="34" viewBox="0 0 36 34" fill="none"
                                                         xmlns="http://www.w3.org/2000/svg">
                                                        <path d="M23 28.8793C24.3882 29.2833 25.8563 29.5 27.3749 29.5C29.8395 29.5 32.1709 28.9294 34.244 27.913C34.2479 27.8175 34.2499 27.7215 34.2499 27.625C34.2499 23.828 31.1719 20.75 27.3749 20.75C25.0115 20.75 22.9267 21.9425 21.6893 23.7587M23 28.8793V28.875C23 27.0202 22.5247 25.2764 21.6893 23.7587M23 28.8793C23 28.9387 22.9995 28.998 22.9985 29.0572C19.8956 30.9254 16.2608 32 12.375 32C8.48921 32 4.8544 30.9254 1.75153 29.0572C1.75051 28.9966 1.75 28.9359 1.75 28.875C1.75 23.007 6.50698 18.25 12.375 18.25C16.3882 18.25 19.8817 20.475 21.6893 23.7587M18 7.625C18 10.7316 15.4816 13.25 12.375 13.25C9.2684 13.25 6.75 10.7316 6.75 7.625C6.75 4.5184 9.2684 2 12.375 2C15.4816 2 18 4.5184 18 7.625ZM31.75 11.375C31.75 13.7912 29.7912 15.75 27.375 15.75C24.9588 15.75 23 13.7912 23 11.375C23 8.95875 24.9588 7 27.375 7C29.7912 7 31.75 8.95875 31.75 11.375Z"
                                                              stroke="#150E25" stroke-width="2.5" stroke-linecap="round"
                                                              stroke-linejoin="round"/>
                                                    </svg>
                                                </div>
                                                <p class="fs-6 fw-bold pt-lg-5 mb-1">Great Culture</p>
                                                <p class="mb-0">
                                                    Collaborative, inclusive, and supportive workplace.
                                                </p>
                                            </div>
                                            <img
                                                    loading="lazy"
                                                    class="rounded-5 mt-3"
                                                    style="min-height: 269px; object-fit: cover;"
                                                    src="/theme_taqatechno/static/src/images/carers/our-teams.webp"
                                                    alt="Our team"
                                            />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <div class="oe_structure oe_empty"/>
                    <!-- Benefits & perks -->
                    <section class="my-lg-5 benefits pb-5 pt-lg-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-5">
                                    <h3 class="pb-3">Benefits &amp; Perks</h3>
                                </div>
                                <div class="col-lg-7">
                                    <div class="d-flex flex-wrap gap-lg-4 gap-2" style="max-width: 710px;">
                                        <div
                                                style="background: #f5f5f5; width: fit-content; font-weight: 700 !important; padding: 24px 32px;"
                                                class="widget fs-response-16 fs-5 rounded-4"
                                        >
                                            Competitive Salary
                                        </div>
                                        <div
                                                style="background: #f5f5f5; width: fit-content; font-weight: 700 !important; padding: 24px 32px;"
                                                class="widget fs-response-16 fs-5 rounded-4"
                                        >
                                            Modern Equipment
                                        </div>
                                        <div
                                                style="background: #f5f5f5; width: fit-content; font-weight: 700 !important; padding: 24px 32px;"
                                                class="widget fs-response-16 fs-5 rounded-4"
                                        >
                                            Remote Work Options
                                        </div>
                                        <div
                                                style="background: #f5f5f5; width: fit-content; font-weight: 700 !important; padding: 24px 32px;"
                                                class="widget fs-response-16 fs-5 rounded-4"
                                        >
                                            Professional Development
                                        </div>
                                        <div
                                                style="background: #f5f5f5; width: fit-content; font-weight: 700 !important; padding: 24px 32px;"
                                                class="widget fs-response-16 fs-5 rounded-4"
                                        >
                                            Performance Bonuses
                                        </div>
                                        <div
                                                style="background: #f5f5f5; width: fit-content; font-weight: 700 !important; padding: 24px 32px;"
                                                class="widget fs-response-16 fs-5 rounded-4"
                                        >
                                            Team Events
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <div class="oe_structure oe_empty"/>
                    <!-- Open Positions -->
                    <section id="jobs-carers" class="py-5">
                        <div class="container">
                            <div class="row">
                                <t t-set="total_jobs"
                                   t-value="request.env['hr.job'].search_count([('website_id', '=', website.id)])"/>
                                <div class="content d-flex justify-content-between pb-3 w-100">
                                    <div class="details">
                                        <h3 class="title pb-2">Open Positions</h3>
                                        <p class="count pb-2 text-nowrap" style="color: #150e25;">
                                            <t t-out="total_jobs"/>
                                            Positions
                                        </p>
                                    </div>
                                    <a href="/jobs" class="fs-6 text-dark">View all</a>
                                </div>
                                <t t-set="jobs"
                                   t-value="request.env['hr.job'].search([('website_id', '=', website.id),('view_Positions_carers', '=', True)], limit=8)"/>
                                <div t-if="jobs">
                                    <t t-foreach="jobs" t-as="job">
                                        <div class="box mt-4 position-relative rounded-5 p-3 bg-light">
                                            <!-- Unpublished badge -->
                                            <p t-if="not job.website_published"
                                               class="badge bg-danger text-white position-absolute"
                                               style="right: 0; top: -6px; font-style: italic;">
                                                Unpublished
                                            </p>

                                            <div class="details">
                                                <!-- Job title -->
                                                <h5 class="mb-3">
                                                    <t t-esc="job.name"/>
                                                </h5>

                                                <!-- Contract & experience -->
                                                <div class="details-jobs d-flex gap-3 align-items-center mb-4">
                                                    <t t-if="job.contract_type_id">
                                                        <p class="mb-0 fw-medium fs-6">
                                                            <t t-esc="job.contract_type_id.name"/>
                                                        </p>
                                                        <span class="text-muted">|</span>
                                                    </t>
                                                    <p class="mb-0 fw-medium fs-6">
                                                        <t t-esc="job.experience"/>+ years
                                                    </p>
                                                </div>

                                                <!-- Date & apply button -->
                                                <div class="date d-flex justify-content-between align-items-center">
                                                    <time t-if="job.date_jobs"
                                                          class="text-secondary"
                                                          t-esc="job.date_jobs.strftime('%b %d, %Y')"/>
                                                    <span t-else="" class="text-secondary">Undefined</span>

                                                    <a t-attf-href="/jobs/#{ slug(job) }"
                                                       class="btn btn-primary fw-bold">
                                                        Apply now
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                             viewBox="0 0 24 24" fill="none" class="ms-2">
                                                            <path d="M4.5 12L19.5 12M19.5 12L12.75 5.25M19.5 12L12.75 18.75"
                                                                  stroke="#FFF" stroke-width="1.5"
                                                                  stroke-linecap="round"
                                                                  stroke-linejoin="round"/>
                                                        </svg>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>

                            </div>
                        </div>
                    </section>
                    <div class="oe_structure oe_empty"/>
                </div>
            </t>
        </template>

        <record id="careers_page" model="theme.website.page">
            <field name="view_id" ref="careers_page_template"/>
            <field name="website_indexed" eval="True"/>
            <field name="is_published" eval="True"/>
            <field name="url">/careers</field>
        </record>

        <!-- Case 1: Create a new navbar menu -->
        <record id="taqatechno_careers_menu" model="theme.website.menu">
            <field name="name">Careers</field>
            <field name="url">/careers</field>
            <field name="sequence" type="int">23</field>
        </record>

    </data>
</odoo>
